export PATH="$OPENSHIFT_DATA_DIR/bin:${PATH}"
echo "PATH for local bin exported"
echo ${PATH}

export PNG_LIBRARY="$OPENSHIFT_DATA_DIR/lib/libpng.so"
export PNG_INCLUDE_DIR="$OPENSHIFT_DATA_DIR/include"

export LD_LIBRARY_PATH="${OPENSHIFT_DATA_DIR}lib/"
echo "LD_LIBRARY_PATH set to"
echo "${LD_LIBRARY_PATH}"

export C_INCLUDE_PATH="${OPENSHIFT_DATA_DIR}include"
export CPLUS_INCLUDE_PATH="${OPENSHIFT_DATA_DIR}include"
echo "C_INCLUDE_PATH set to"
echo "${C_INCLUDE_PATH}"
